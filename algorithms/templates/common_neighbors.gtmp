*ACCM*CREATE QUERY common_neighbors*EXT* (VERTEX source, INT topK) FOR GRAPH *graph* {
*FILE*CREATE QUERY common_neighbors*EXT* (VERTEX source, INT topK, FILE f) FOR GRAPH *graph* {
        SumAccum<INT> @score;

*ACCM*  MapAccum<VERTEX, INT> @@topK_result;        

        start = {source};

        # 1 hop neighbors. Want to exclude from result as well using @visited
        N1 = SELECT n FROM start:s-(*edge-types*)->:n;

        # 2 hop neighbors
        N2 = SELECT n FROM N1:s-(*edge-types*)->:n
            WHERE n != source
            ACCUM n.@score += 1
            ORDER BY n.@score DESC
            LIMIT topK;

*ATTR*  N2 = SELECT s FROM N2:s
*ATTR*          POST-ACCUM INSERT INTO *insert-edge-name* values (source, s, s.@score);

*ACCM*  PRINT N2.@score;

*FILE*  f.println("Vertex1", "Vertex2", "Common Neighbors");
*FILE*  N2 = SELECT s FROM N2:s POST-ACCUM f.println(source, s, s.@score);
}